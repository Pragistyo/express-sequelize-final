<%- include partial/header%>
<%- include partial/navbar%>
  </head>
  <body>
    <section>
      <div class="container">
          <div class="row">
            <div class="col-md-4 ml-md-auto mr-md-auto" style="margin-top:50px">
              <h1 style="margin:0;">Search Page</h1>
              <form class="" action="/search" method="get">
                <div class="form-row">
                  <div class="form-group col-md-12">
                    <label for="inputName" class="col-form-label">Name Item</label>
                    <input type="text" name="name" class="form-control" id="inputName" placeholder="  ">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputBrand" class="col-form-label">Min Price</label>
                    <input type="integer" name="min" class="form-control" id="inputBrand" placeholder="">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputCode" class="col-form-label">Max Price</label>
                    <input type="integer" name="max" class="form-control" id="inputCode" placeholder=""  aria-describedby="codeHelp">
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
              </form>
            </div>
          </div>
        </div>
    </section>
    <%if(data){%>
      <section>
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div style="text-align:center; margin: 20px 0">
                <h1 style="margin:0;">Search Result</h1>
              </div>
              <table class="table table-hover">
                <thead>
                  <tr class="table-info">
                    <th>ID</th>
                    <th>Item Name</th>
                    <th>Supplier Name</th>
                    <th>Price</th>
                  </tr>
                </thead>
                <tbody>
                <%data.forEach(z=>{%>
                  <tr>
                    <td><%=z.id%></td>
                    <td><%=z.Item.name%></td>
                    <td>
                        <li><%=z.Supplier.name%></li>
                    </td>
                    <td>
                      <li>Rp. <%=z.price%>,-</li>
                    </td>
                  </tr>
                <%})%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </section>
      <%}%>
  </body>
</html>
