<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <h1>SUPPLIERS LIST</h1>
  </head>
  <body>
    <table border="1">
      <tr>
        <th>Suppliers ID </th>
        <th>Suppliers Name</th>
        <th>Suppliers City</th>
        <th>Add Item</th>
        <th>List Item</th>
        <th>Action</th>
      </tr>
      <% data.forEach(z=>{%>
      <tr>
        <td><%=z.id%></td>
        <td><%=z.name%></td>
        <td><%=z.kota%></td>
        <td><a href="/suppliers/<%=z.id%>/additem"><button type="button" name="button">Assign Item</button></a></td>
        <%if((z.dataValues.Items) && (z.dataValues.Items.length>0)){%>
        <td>
            <ol>
              <%z.Items.forEach(a=>{%>
              <li><%=a.name%> @<%=a.SupplierItem.price%></li>
              <%})%>
            </ol>
        </td>
        <%}else{%>
        <td class="text-center"><font color="red">No Item Yet</font></td>
        <%}%>
        <td>
          <a href="/suppliers/edit/<%=z.id%>"><button type="button" name="button">EDIT</button></a>
          <a href="/suppliers/delete/<%=z.id%>"><button type="button" name="button">DELETE</button></a>
        </td>
      </tr>
      <%})%>
    </table>
    <br>
    <a href="/suppliers/add"><button type="button" name="button">Add New Item</button></a>
  </body><br>
  <a href="/">Home</a>
</html>
